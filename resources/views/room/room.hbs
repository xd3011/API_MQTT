<div class="mt-4">
    <div class="row">
        {{#each room}}
            <div class="col-sm-6 col-lg-4">
                <div class="card" style="width: 18rem;">
                    <a href="#">
                        <img src="{{this.image}}" class="card-img-top" alt="{{this.room_name}}" />
                    </a>
                    <div class="card-body">
                        <a href="#">
                            <h5 class="card-title">{{this.room_name}}</h5>
                        </a>
                        <a href="#" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>